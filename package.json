{
  "name": "alwaysai-mac",
  "version": "0.0.1",
  "description": "alwaysai",
  "main": "src/main.ts",
  "author": {
    "name": "alwaysAI inc",
    "email": "dev@alwaysai.co",
    "url": "https://alwaysai.co"
  },
  "licenses": [
    {
      "license": "UNLICENSED"
    }
  ],
  "prettier": {
    "endOfLine": "lf",
    "singleQuote": true,
    "printWidth": 90,
    "trailingComma": "all"
  },
  "devDependencies": {
    "electron": "6.0.7",
    "electron-builder": "^22.3.6",
    "prettier": "1.18.2"
  },
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac"
  },
  "build": {
    "extends": null,
    "asar": false,
    "appId": "com.alwaysai.installer",
    "productName": "alwaysAI",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "pkg",
      "files": [
        "*.json",
        {
          "from": "resources",
          "to": "tmp",
          "filter": [
            "*.pkg",
            "*.whl"
          ]
        },
        {
          "from": "src",
          "to": "src",
          "filter": [
            "*.svg",
            "*.html",
            "*.js",
            "*.css",
            "*.ts"
          ]
        }
      ]
    },
    "pkg": {
      "allowAnywhere": false,
      "allowRootDirectory": true,
      "allowCurrentUserHome": false,
      "welcome": "welcome",
      "scripts": "pkg_scripts",
      "conclusion": "conclusion",
      "installLocation": "/Applications"
    }
  }
}
